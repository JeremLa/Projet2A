{% extends '@User/userLayout.html.twig' %}
{% block content %}
    <div class="bgimg-1 w3-display-container w3-opacity-min" id="home">
        <div class="w3-display-middle w3-black w3-padding-large" style="white-space:nowrap;max-width: 330px ">
            <div class="w3-center w3-padding-large w3-animate-opacity">
                <h1 class="w3-xxxlarge">UNAMAG</h1>
                <p class="w3-small">Votre manager de magazine</p>
            </div>

            <div class="flashbag-wrapper">
                {% for flashSuccess in app.session.flashbag.get('success') %}
                    <p class="w3-panel w3-green w3-padding">{{ flashSuccess }}</p>
                {% endfor %}
                {% for flashError in app.session.flashbag.get('errors') %}
                    <p class="w3-panel w3-red w3-padding">{{ flashError }}</p>
                {% endfor %}
            </div>

            <div class="w3-padding-large w3-xlarge">
                <a href="{{ path('authentication_login') }}" id="open-login" class="w3-btn w3-white w3-medium w3-hover-blue">se connecter</a>
                <a href="{{ path('authentication_create') }}" id="open-register" class="w3-btn w3-white w3-medium w3-hover-green">s'enregistrer</a>
            </div>
        </div>
    </div>
{% endblock %}