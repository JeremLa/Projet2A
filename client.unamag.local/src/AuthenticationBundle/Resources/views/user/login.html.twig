{% extends '@User/userLayout.html.twig' %}

{% block content %}
    <header class="w3-container w3-teal">
        <h2>{{ 'auth.connect'|trans }}</h2>
    </header>

    <div class="w3-container">
        <div>
            {% for flashErrors in app.session.flashbag.get('errors') %}
                <p class="w3-panel w3-orange">{{ flashErrors }}</p>
            {% endfor %}

            {% for flashSuccess in app.session.flashbag.get('success') %}
                <p class="w3-panel w3-green">{{ flashSuccess }}</p>
            {% endfor %}
        </div>

        {{ form_start(form, { 'attr': {'class': 'w3-container'} }) }}
        {{ form_widget(form) }}
        <p><button type="submit" class="w3-btn w3-blue-grey">Se connecter</button></p>
        {{ form_end(form) }}
    </div>
{% endblock %}