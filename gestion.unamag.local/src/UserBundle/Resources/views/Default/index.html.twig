{% extends 'layout.html.twig' %}

{% block content %}

    <h1>Users list</h1>

    <table class="table table-striped">
        <thead>
        <tr>
            <th></th>
            <th>firstName</th>
            <th>lastName</th>
            <th>mail</th>
            <th>tel</th>
            <th>birthDate</th>
            <th>birthCity</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                {#<td><a href="{{ path('publication_show', { 'id': publication.id }) }}">{{ publication.id }}</a></td>#}
                <td>{{ loop.index }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.mail }}</td>
                <td>{{ user.tel }}</td>
                <td>{{ user.birthDate }}</td>
                <td>{{ user.birthCity }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
