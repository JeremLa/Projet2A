{% extends '@Publication/publicationLayout.html.twig' %}

{% block content %}

    <div class="row">
        <div class="col-md-12 text-center">
            <h1>Les publications</h1>
        </div>
    </div>

    {% if response.pagination.nbPages > 0 %}
        <ul class="pagination">
            {% if response.pagination.page > 1 %}
                <li>
                    <a href="{{ path(response.pagination.nomRoute, response.pagination.paramsRoute|merge({'page': 1})) }}">
                        <<
                    </a>
                </li>
                <li>
                    <a href="{{ path(response.pagination.nomRoute,
                    response.pagination.paramsRoute|merge({'page': response.pagination.page-1})) }}">
                        <
                    </a>
                </li>
            {% endif %}

            {# Affichage de toutes les pages entre p-4 et p+4 sauf si < 1 ou > nbPages #}
            {% for p in range(max(response.pagination.page-4, 1), min(response.pagination.page+4, response.pagination.nbPages)) %}
                <li {% if p == response.pagination.page %}class="active"{% endif %}>
                    <a href="{{ path(response.pagination.nomRoute, response.pagination.paramsRoute|merge({'page': p})) }}">
                        {{ p }}
                    </a>
                </li>
            {% endfor %}

            {% if response.pagination.page < response.pagination.nbPages %}
                <li>
                    <a href="{{ path(response.pagination.nomRoute,
                    response.pagination.paramsRoute|merge({'page': response.pagination.page+1})) }}">
                        >
                    </a>
                </li>
                <li>
                    <a href="{{ path(response.pagination.nomRoute,
                    response.pagination.paramsRoute|merge({'page': response.pagination.nbPages})) }}">
                        >>
                    </a>
                </li>
            {% endif %}
        </ul>
    {% endif %}

    <div class="row">
        <div class="col-md-12 text-center">
            <a href="{{ path('publication_new') }}" class="btn btn-success">Cr√©er une nouvelle publication</a>
        </div>
    </div>
    <br>
    <br>
    <div class="row">
        <div class="col-md-12">
            {% for publication in response.publications %}
            <div class="col-md-4 publication-card">
                <a href="{{ path('publication_show', { 'id': publication.id }) }}">
                    <div class="thumbnail">
                        <img src="data:image/jpeg;base64,{{ publication.picture }}">
                        <div class="caption">
                            <div class="row">
                                <div class="col-md-6">
                                    <h4>{{ publication.title }}</h4>
                                </div>
                                <div class="col-md-6 text-right">
                                    <h4><span class="glyphicon glyphicon-user"></span> {{ publication.subscription|length }}</h4>
                                </div>
                            </div>
                            <p>{{ publication.description|length > 25 ?  publication.description|slice(0, 25) ~ '...' : publication.description }}</p>
                        </div>
                    </div>
                </a>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
