{% extends 'layout.html.twig' %}
{% block title %} Connexion {% endblock %}
{% block content %}
    <div class="row">
        <div class="jumbotron col-md-12">
            <span class="text-center"><h2>{{ 'auth.connect'|trans }}</h2></span>
            {% if errors is defined %}
                {% for error in errors %}
                    <span class="alert alert-danger col-md-offset-3 col-md-6">
                    {{ error|trans }}
                        </span>
                {% endfor %}
            {% endif %}
            <div>

    {{ form_start(form, { 'attr': {'class': 'col-md-offset-3 col-md-6'} }) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
            </div>
    </div>
    </div>

{% endblock %}